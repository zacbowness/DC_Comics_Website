<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Grade for Comic Book</title>
    <link rel="stylesheet" href="/DCStyle.css">
</head>
<body>
    <div class="container">
        <h1>Edit Grade for Comic Book</h1>

        <!-- Displaying the comic ID properly -->
        <p>For Comic: <%= comic_id %></p>

        <form action="/edit-grade" method="POST">
            <!-- Hidden field to store comic_id and grading_id (for updating) -->
            <input type="hidden" name="comic_id" value="<%= comic_id %>">
            <input type="hidden" name="grading_id" value="<%= grade.grading_id %>">

            <!-- Select Grade Company -->
            <label for="company">Select Grade Company</label>
            <select name="company" required>
                <option value="">-- Select Grade Company --</option>
                <% gradeCompanies.forEach(function(company) { %>
                    <option value="<%= company.grade_company %>" <%= company.grade_company === grade.company ? 'selected' : '' %>>
                        <%= company.grade_company_title %>
                    </option>
                <% }); %>
            </select>

            <!-- Grade Number Input (dropdown for predefined values) -->
            <label for="number">Grade Number</label>
            <select name="number" required>
                <option value="">-- Select Grade Number --</option>
                <option value="10.0" <%= grade.number === 10.0 ? 'selected' : '' %>>10.0 GM - Gem Mint (slabbed comics only)</option>
                <option value="9.9" <%= grade.number === 9.9 ? 'selected' : '' %>>9.9 M - Mint (slabbed comics only)</option>
                <option value="9.8" <%= grade.number === 9.8 ? 'selected' : '' %>>9.8 NM/M - Near Mint/Mint</option>
                <option value="9.6" <%= grade.number === 9.6 ? 'selected' : '' %>>9.6 NM+ - Near Mint+</option>
                <option value="9.4" <%= grade.number === 9.4 ? 'selected' : '' %>>9.4 NM - Near Mint</option>
                <option value="9.2" <%= grade.number === 9.2 ? 'selected' : '' %>>9.2 NM- - Near Mint-</option>
                <option value="9.0" <%= grade.number === 9.0 ? 'selected' : '' %>>9.0 VF/NM - Very Fine/Near Mint</option>
                <option value="8.5" <%= grade.number === 8.5 ? 'selected' : '' %>>8.5 VF+ - Very Fine+</option>
                <option value="8.0" <%= grade.number === 8.0 ? 'selected' : '' %>>8.0 VF - Very Fine</option>
                <option value="7.5" <%= grade.number === 7.5 ? 'selected' : '' %>>7.5 VF- - Very Fine-</option>
                <option value="7.0" <%= grade.number === 7.0 ? 'selected' : '' %>>7.0 FN/VF - Fine/Very Fine</option>
                <option value="6.5" <%= grade.number === 6.5 ? 'selected' : '' %>>6.5 FN+ - Fine+</option>
                <option value="6.0" <%= grade.number === 6.0 ? 'selected' : '' %>>6.0 FN - Fine</option>
                <option value="5.5" <%= grade.number === 5.5 ? 'selected' : '' %>>5.5 FN- - Fine-</option>
                <option value="5.0" <%= grade.number === 5.0 ? 'selected' : '' %>>5.0 VG/FN - Very Good/Fine</option>
                <option value="4.5" <%= grade.number === 4.5 ? 'selected' : '' %>>4.5 VG+ - Very Good+</option>
                <option value="4.0" <%= grade.number === 4.0 ? 'selected' : '' %>>4.0 VG - Very Good</option>
                <option value="3.5" <%= grade.number === 3.5 ? 'selected' : '' %>>3.5 VG- - Very Good-</option>
                <option value="3.0" <%= grade.number === 3.0 ? 'selected' : '' %>>3.0 GD/VG - Good/Very Good</option>
                <option value="2.5" <%= grade.number === 2.5 ? 'selected' : '' %>>2.5 GD+ - Good+</option>
                <option value="2.0" <%= grade.number === 2.0 ? 'selected' : '' %>>2.0 GD - Good</option>
                <option value="1.8" <%= grade.number === 1.8 ? 'selected' : '' %>>1.8 GD- - Good-</option>
                <option value="1.5" <%= grade.number === 1.5 ? 'selected' : '' %>>1.5 FR/GD - Fair/Good</option>
                <option value="1.0" <%= grade.number === 1.0 ? 'selected' : '' %>>1.0 FR - Fair</option>
                <option value="0.5" <%= grade.number === 0.5 ? 'selected' : '' %>>0.5 PR - Poor</option>
            </select>
            <small>Select the grade number based on the comic's condition.</small>

            <!-- Grade Description -->
            <label for="grade_description">Grade Description</label>
            <input type="text" name="grade_description" value="<%= grade.grade_description %>" required>
            <small>A short description about the grade, e.g., "Near Mint".</small>

            <!-- Colour Input (dropdown for predefined values) -->
            <label for="colour">Colour (Indicates condition)</label>
            <select name="colour" required>
                <option value="">-- Select Colour --</option>
                <option value="Red" <%= grade.colour === 'Red' ? 'selected' : '' %>>Red - Verified Signature</option>
                <option value="Yellow" <%= grade.colour === 'Yellow' ? 'selected' : '' %>>Yellow - Average grade (5-7)</option>
                <option value="Green" <%= grade.colour === 'Green' ? 'selected' : '' %>>Green - Good to Very Good grade (7-8)</option>
                <option value="Blue" <%= grade.colour === 'Blue' ? 'selected' : '' %>>Blue - Excellent to Mint grade (9-10)</option>
            </select>
            <small>Select the grade colour based on the comic's condition.</small>

            <!-- Submit and Reset Buttons -->
            <button type="submit">Update Grade</button>
            <button type="reset">Reset Form</button>
            <a href="/" class="back-button">Back to Search</a>
            
        </form>
    </div>
</body>
</html>
