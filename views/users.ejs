
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/DCStyle.css">
</head>
<body>
    <div class="container">
    <h1>All Users</h1>

    <!-- Table to display users -->
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            <% if (users.length === 0) { %>
                <tr>
                    <td colspan="5">No users found.</td>
                </tr>
            <% } else { %>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td><%= user.user_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.DOB %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

    <br>


    <a  class="back-button" href="/add-user">Add New User </a>
    <a class="back-button" href="/" class="back-button">Back to Search</a>
    <div class="container">
</body>
</html>
